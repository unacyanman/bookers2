<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
    <script src="https://kit.fontawesome.com/354c6003fa.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm text-white bg-dark">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%= %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <ui class="main-nav ml-auto">
            <%= link_to 'Bookers', destroy_user_session_path, method: :delete %>
          </ui>
            <% if user_signed_in? %>
            <div class="collapse navbar-collapse"  id="navbarNavDropdown">
              <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                  <%= link_to 'Home', root_path %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Users', users_index_path %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Books', books_path %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
                </li>
              </ul>  
            </div>
            <% else %>
            <div class="collapse navbar-collapse"  id="navbarNavDropdown">
              <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                  <%= link_to 'Home', root_path %>
                </li>
                <li class="nav-item">
                  <%= link_to 'About', about_path %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Sign up', new_user_registration_path %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Log in', new_user_session_path %>
                </li>
              </ul>
            </div> 
            <% end %>
          </ul>
        </div>    
      </nav>      
    </header>
      
      <%= yield %>
      
    <footer class="mx-auto">
      <p>CopyRight Infratop.inc</p>
    </footer>
    
  </body>
  
</html>
