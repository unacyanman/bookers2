<!-- 左側 -->
<div class="col-md-4">
  <h4>User info</h4>
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.get_profile_image %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>  
  
  <table class="table table-striped">
    <table class=user_table>
      <tr><th>name</th><th><%= @user.name %></th></tr>
      <tr><th>introduction</th><th><%= @user.introduction %></th></tr>
    </table></br>
  </table>
  
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  
  <div class="row">
    <div class="btn-block edit_user" href="/users/edit">
      <div class= data-icon="user-gear" role="img">
        <path fill="currentColor"></path>
      </div>
    </div>
  </div>
  
  <h4>New book</h4>
  <%= form_with model: Book.new, url: books_path, method: :post do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
  	
    <p>Opinion</p>
    <%= f.text_area :body %></br>
  	<%= f.submit 'Create Book' %>
  <% end %>
</div>