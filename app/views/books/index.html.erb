<h4>books index</h4>
<div class="container">
  <div class="row">
    
    <!-- 左側 -->
    <%= render 'books/common', books: @books %>
    
    <!-- 右側 -->
    <div class="col-md-8">
      <h4>Books</h4>
        <table class="table table-striped">
          <table class="books_table">
            <tr>
              <th></th>
              <th>Title</th>
              <th>Option</th>
            </tr>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= link_to user_path(@user) do %>
                    <%= image_tag @user.get_profile_image %>
                  <% end %></td>
                  
                  <td><%=link_to book.title, book_path(book.id) %></td>
                  
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </table>
    </div> 
     
  </div>
</div>