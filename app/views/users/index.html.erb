<h4>users index</h4>
<div class="container">
  <div class="row">
    
    <!-- 左側 -->
    <%= render 'books/common', books: @books %>
    
    <!-- 右側 -->
    <div class="col-md-8">
      <h4>Users</h4>
        <table class="table table-striped">
          <table class="books_table">
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= image_tag user.get_profile_image %></td>
                  <td><%= user.name %></td>
                  <td><%=link_to "Show", user_path(user) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </table>
    </div> 
     
  </div>
</div>