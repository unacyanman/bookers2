<%= form_with model: @user do |f| %>
  <h4>User info</h4>
  <h3><%= @user.name %></h3>
  <% if user.profile_image.attached? %>
    <%= image_tag @user.get_profile_image(100,100) %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>  
<% end %>


<%= form_with model:Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>